{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "illuc",
  "version": "1.0.1",
  "identifier": "com.illuc.app",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/illuc/browser"
  },
  "app": {
    "windows": [
      {
        "title": "illuc",
        "width": 800,
        "height": 600,
        "maximized": true,
        "visible": false,
        "backgroundColor": "#000000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
